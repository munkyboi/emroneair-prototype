<div class='row'>

  <div class="col-md-4">
    <div class="row">
      <div class='col-md-12'>
        <div class="form-group">
          <label for="new-form-transnum">Transaction Number</label>
          <input name='transnum' id="new-form-transnum" class="form-control" disabled>
        </div>
      </div>
      <div class='col-md-12'>
        <div class="form-group">
          <label for="new-form-date">Select a date</label>
          <div class='input-field dateselect dateselect-current'>
            <a class="dateselect-icon" href="#">
              <i class='mdi mdi-calendar-search'></i>
            </a>
            <input id='new-form-date' type="text" class="form-control current" data-toggle='datepicker' aria-label="Search" data-date-format="dd/mm/yyyy">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class='col-md-12'>
        <div class="form-group">
          <label for="new-form-patient">Select Patient</label>
          <select id='new-form-patient' class="select2" name='patient'>
            <option selected value="" style="display:none;"></option>
            <option value="Wong, Sam Ting">Wong, Sam Ting</option>
            <option value="Tubol, Rita">Tubol, Rita</option>
            <option value="Oplok, Ken">Oplok, Ken</option>
            <option value="Yopay, Manu">Yopay, Manu</option>
            <option value="Tambling, Jack">Tambling, Jack</option>
          </select>
        </div>
      </div>
      <div class='col-md-12'>
        <div class="form-group">
          <label for="new-form-paymenttype">Select Payment Type</label>
          <select id='new-form-paymenttype' class="select2" name='paymenttype'>
            <option selected value="" style="display:none;"></option>
            <option value="Kugmo Supplies">Kugmo Supplies</option>
            <option value="Ship-On Unlimited">Ship-On Unlimited</option>
            <option value="Boe Ugohn Industries">Boe Ugohn Industries</option>
            <option value="Two Bull Enterprise">Two Bull Enterprise</option>
            <option value="e-Gate Liquid State">e-Gate Liquid State</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class='col-md-12'>
        <div class="form-group">
          <label for="new-form-remarks">Remarks</label>
          <textarea class='form-control' name='remarks' rows='5'></textarea>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-12">
    <div class="simple-table">
      <div class="toolbar table-toolbar">
        
        <button
          type='button'
          class='btn btn-info'
          data-toggle='dialog'
          data-title='Add Charges'
          data-content='/forms/table-select-form.html'
          data-type='ajax-selection'
          data-size='modal-lg'
          >
          <i class="mdi mdi-plus"></i>
          <span>Add Charges</span>
        </button>
      </div>
      <div class="table-wrapper">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Description</th>
              <th scope="col">Unit Msr.</th>
              <th scope="col">Qty</th>
              <th scope="col">Cost</th>
              <th scope="col">Discount</th>
              <th scope="col">Net Cost</th>
              <th scope="col">Amount</th>
              <th scope="col" class='actions'></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">Keyboard</th>
              <td>1</td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0.00'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='320.00'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0.00'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0.00'>
                </div>
              </td>
              <td class='actions'><div class="table-actions">
                <button class='iconbtn danger'><i class="mdi mdi-delete"></i></button>
              </div></td>
            </tr>
            <tr>
              <th scope="row">Baboy</th>
              <td>1</td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0.00'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='320.00'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0.00'>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <input type="text" class="form-control" value='0.00'>
                </div>
              </td>
              <td class='actions'><div class="table-actions">
                <button class='iconbtn danger'><i class="mdi mdi-delete"></i></button>
              </div></td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div class='table-footer'>
        <div class="row">
          <div class="col-md-4">
            <div class="form-group inline">
              <label for="new-form-payable">Payable</label>
              <input name='payable' id="new-form-payable" class="form-control" disabled>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group inline">
              <label for="new-form-net">Net</label>
              <input name='net' id="new-form-net" class="form-control" disabled>
            </div>
          </div>
          <div class="col-md-4 d-flex justify-content-end">
            <div class="form-group inline">
              <label for="new-form-balance"><span class='text--bold'>Balance</span></label>
              <input name='balance' id="new-form-balance" class="form-control" disabled>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group inline">
              <label for="new-form-discount">Discount</label>
              <input name='discount' id="new-form-discount" class="form-control" disabled>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group inline">
              <label for="new-form-amountpaid">Amount Paid</label>
              <input name='amountpaid' id="new-form-amountpaid" class="form-control">
            </div>
          </div>
          <div class="col-md-4 d-flex justify-content-end">
            <div class="form-group inline">
              <label for="new-form-change"><span class='text--bold'>Change</span></label>
              <input name='change' id="new-form-change" class="form-control" disabled>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>